<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_recurrente_payment_acquirer_form" model="ir.ui.view">
        <field name="name">Recurrente Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <group name="acquirer" position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'recurrente')]}">
                    <field name="recurrente_public_key" password="True"
                        attrs="{'required': ['&amp;', ('provider', '=', 'recurrente'), ('state', '!=', 'disabled')]}"/>
                    <field name="recurrente_secret_key" password="True"
                        attrs="{'required': ['&amp;', ('provider', '=', 'recurrente'), ('state', '!=', 'disabled')]}"/>
                    <a href="https://blog.codingtipi.com/como-aceptar-pagos-con-tarjeta-desde-woocommerce-con-recurrente/"
                       target="_blank"
                       colspan="2">
                        How to configure your Recurrente account?
                    </a>
                </group>
            </group>
        </field>
    </record>

</odoo>
